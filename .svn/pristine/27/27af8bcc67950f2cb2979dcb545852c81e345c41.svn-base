var data = [];
var now = +new Date(1997, 9, 3);
var oneDay = 24 * 3600 * 1000;
var value = Math.random() * 1000;
for (var i = 0; i < 1000; i++) {
	data.push(randomData());
}
function randomData() {
	now = new Date(+now + oneDay);
	value = value + Math.random() * 21 - 10;
	return {
		name : now.toString(),
		value : [
				[ now.getFullYear(), now.getMonth() + 1, now.getDate() ]
						.join('/'), Math.round(value) ]
	}
}

function world_cloud(cloud) {
	var option = {
		tooltip : {},
		series : [ {
			type : 'wordCloud',
			gridSize : 2,
			sizeRange : [ 24, 100 ],
			rotationRange : [ 0, 0 ],
			shape : 'circle',
			width : 800,
			height : 600,
			textStyle : {
				normal : {
					color : function() {
						return 'rgb('
								+ [ Math.round(Math.random() * 160),
										Math.round(Math.random() * 160),
										Math.round(Math.random() * 160) ]
										.join(',') + ')';
					}
				},
				emphasis : {
					shadowBlur : 10,
					shadowColor : '#333'
				}
			},
			data :cloud
		} ]
	};
	return option;
}
function line(lineChart) {
	var option = {
		title : {
			text : '动态数据 + 时间坐标轴'
		},
		tooltip : {
			trigger : 'axis',
			formatter : function(params) {
				params = params[0];
				var date = new Date(params.name);
				return date.getDate() + '/' + (date.getMonth() + 1) + '/'
						+ date.getFullYear() + ' : ' + params.value[1];
			},
			axisPointer : {
				animation : false
			}
		},
		xAxis : {
			type : 'time',
			splitLine : {
				show : false
			}
		},
		yAxis : {
			type : 'value',
			boundaryGap : [ 0, '100%' ],
			splitLine : {
				show : false
			}
		},
		series : [ {
			name : '模拟数据',
			type : 'line',
			showSymbol : false,
			hoverAnimation : false,
			data : data
		} ]
	};

	setInterval(function() {

		for (var i = 0; i < 5; i++) {
			data.shift();
			data.push(randomData());
		}

		lineChart.setOption({
			series : [ {
				data : data
			} ]
		});
	}, 1000);
	return option;
}

function bar(mn, ml, wn, wl) {
	var itemStyle = {
		normal : {},
		emphasis : {
			barBorderWidth : 1,
			shadowBlur : 10,
			shadowOffsetX : 0,
			shadowOffsetY : 0,
			shadowColor : 'rgba(0,0,0,0.5)'
		}
	};
	var option = {
		backgroundColor : '#eee',
		legend : {
			data : [ '今年男生', '今年女生', '去年男生', '去年女生' ],
			align : 'left',
			left : 10
		},
		tooltip : {},
		xAxis : {
			data : [ '年度大会', '员工奉献奖', '微电影走秀', '微电影播映', '微电影颁奖', '晚宴走秀',
					'晚宴节目表演', '晚宴抽奖' ],
			silent : false,
			axisLine : {
				onZero : true
			},
			splitLine : {
				show : false
			},
			splitArea : {
				show : false
			}
		},
		yAxis : {
			inverse : true,
			splitArea : {
				show : false
			}
		},
		grid : {
			left : 100
		},
		series : [ {
			name : '今年男生',
			type : 'bar',
			stack : 'one',
			itemStyle : itemStyle,
			data : mn
		}, {
			name : '今年女生',
			type : 'bar',
			stack : 'one',
			itemStyle : itemStyle,
			data : wn
		}, {
			name : '去年男生',
			type : 'bar',
			stack : 'one',
			itemStyle : itemStyle,
			data : ml
		}, {
			name : '去年女生',
			type : 'bar',
			stack : 'one',
			itemStyle : itemStyle,
			data : wl
		} ]
	};
	return option;
}
function pie(lenged, data) {
	var option = {
		title : {
			text : '南丁格尔玫瑰图',
			subtext : '纯属虚构',
			x : 'center'
		},
		tooltip : {
			trigger : 'item',
			formatter : "{a} <br/>{b} : {c} ({d}%)"
		},
		legend : {
			x : 'center',
			y : 'bottom',
			data : lenged
		},
		calculable : true,
		series : [ {
			name : '面积模式',
			type : 'pie',
			radius : [ 50, 210 ],
			center : [ '50%', '50%' ],
			roseType : 'area',
			data : data
		} ]
	};
	return option;
}