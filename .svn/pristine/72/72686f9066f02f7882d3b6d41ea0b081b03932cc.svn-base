function bar(mn, ml, wn, wl) {
	var itemStyle = {
		normal : {},
		emphasis : {
			barBorderWidth : 1,
			shadowBlur : 10,
			shadowOffsetX : 0,
			shadowOffsetY : 0,
			shadowColor : 'rgba(0,0,0,0.5)'
		}
	};
	var option = {
		backgroundColor : '#eee',
		backgroundColor : '#eee',
		legend : {
			data : [ '今年男生', '今年女生', '去年男生', '去年女生' ],
			align : 'left',
			left : 10
		},
		tooltip : {},
		xAxis : {
			data : [ '年度大会', '员工奉献奖', '微电影走秀', '微电影播映', '微电影颁奖', '晚宴走秀',
					'晚宴节目表演', '晚宴抽奖' ],
			silent : false,
			axisLine : {
				onZero : true
			},
			splitLine : {
				show : false
			},
			splitArea : {
				show : false
			}
		},
		yAxis : {
			inverse : true,
			splitArea : {
				show : false
			}
		},
		grid : {
			left : 100
		},
		series : [ {
			name : '今年男生',
			type : 'bar',
			stack : 'one',
			itemStyle : itemStyle,
			data : mn
		}, {
			name : '今年女生',
			type : 'bar',
			stack : 'one',
			itemStyle : itemStyle,
			data : wn
		}, {
			name : '去年男生',
			type : 'bar',
			stack : 'one',
			itemStyle : itemStyle,
			data : ml
		}, {
			name : '去年女生',
			type : 'bar',
			stack : 'one',
			itemStyle : itemStyle,
			data : wl
		} ]
	};
	return option;
}
function pie(lenged, data) {
	var option = {
		backgroundColor : '#eee',
		tooltip : {
			trigger : 'item',
			formatter : "{a} <br/>{b} : {c} ({d}%)"
		},
		legend : {
			x : 'left',
			y : 'top',
			orient : 'vertical',
			textStyle : {
				fontSize : 16,
			},
			data : lenged
		},
		calculable : true,
		series : [ {
			name : '最大的愿望',
			type : 'pie',
			radius : [ 50, 350 ],
			center : [ '50%', '50%' ],
			label : {
				normal : {
					textStyle : {
						fontSize : 20,
						fontWeight : 'bold'
					}
				}
			},
			roseType : 'area',
			data : data
		} ]
	};
	return option;
}