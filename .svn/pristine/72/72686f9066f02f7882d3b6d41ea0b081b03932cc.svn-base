function world_cloud(cloud) {
	var option = {
		tooltip : {},
		series : [ {
			type : 'wordCloud',
			gridSize : 2,
			sizeRange : [ 50, 100 ],
			rotationRange : [ 40, 90 ],
			shape : 'circle',
			textStyle : {
				normal : {
					color : function() {
						return 'rgb('
								+ [ Math.round(Math.random() * 160),
										Math.round(Math.random() * 160),
										Math.round(Math.random() * 160) ]
										.join(',') + ')';
					}
				},
				emphasis : {
					shadowBlur : 10,
					shadowColor : '#333'
				}
			},
			data : cloud
		} ]
	};
	return option;
}
